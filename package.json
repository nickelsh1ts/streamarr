{
  "name": "streamarr",
  "version": "0.00.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "standalone": "yarn build && cp -r public/ .next/standalone && cp -r .next/static .next/standalone/.next",
    "prepare": "yarn format && yarn lint && yarn css-lint && yarn typecheck",
    "lint": "eslint \"./src/**/*.{ts,tsx}\" --cache",
    "start": "next start",
    "css-lint": "stylelint src/styles/*.css public/*.css",
    "i18n:extract": "extract-messages -l=en -o src/i18n/locale -d en --flat true --overwriteDefault true \"./src/**/!(*.test).{ts,tsx}\"",
    "format": "prettier 'src/**/*.{css,js,ts,tsx}' --log-level warn --write --cache .",
    "format:check": "prettier 'src/**/*.{css,js,ts,tsx}' --check --cache .",
    "typecheck": "yarn typecheck:client",
    "typecheck:client": "tsc --noEmit",
    "cypress:open": "cypress open",
    "css-build": "tailwindcss -o public/tailwind.css",
    "css-watch": "tailwindcss -o public/tailwind.css --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nickelsh1ts/streamarr.git"
  },
  "license": "MIT",
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@svgr/webpack": "8.1.0",
    "@tailwindcss/aspect-ratio": "0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "0.5.10",
    "@tailwindcss/typography": "0.5.16",
    "autoprefixer": "10.4.21",
    "axios": "^1.9.0",
    "axios-rate-limit": "^1.4.0",
    "bowser": "^2.11.0",
    "date-fns": "^4.1.0",
    "formik": "^2.4.6",
    "intl": "1.2.5",
    "jose": "^6.0.11",
    "moment": "^2.30.1",
    "next": "^15.3.3",
    "nextjs-toploader": "^3.8.16",
    "node-cache": "^5.1.2",
    "plex-api": "^5.3.2",
    "postcss": "8.5.4",
    "react": "^19.1.0",
    "react-animate-height": "^3.2.3",
    "react-aria": "3.41.0",
    "react-big-calendar": "^1.19.2",
    "react-datepicker": "^8.4.0",
    "react-dom": "19.1.0",
    "react-hot-toast": "^2.5.2",
    "react-intl": "7.1.11",
    "react-popper-tooltip": "^4.4.2",
    "react-use-clipboard": "1.0.9",
    "reflect-metadata": "^0.2.2",
    "sass": "^1.89.1",
    "secure-random-password": "^0.2.3",
    "swr": "^2.3.3",
    "tailwindcss": "3.4.17",
    "theme-change": "^2.5.0",
    "typeorm": "^0.3.24",
    "usehooks-ts": "^3.1.1",
    "web-push": "^3.6.7",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/compat": "^1.2.9",
    "@eslint/js": "^9.28.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/exec": "7.1.0",
    "@semantic-release/git": "10.0.1",
    "@types/node": "^22.15.30",
    "@types/react": "18.3.23",
    "@types/react-big-calendar": "^1.16.2",
    "@types/react-dom": "18.3.7",
    "@types/react-transition-group": "4.4.12",
    "@types/secure-random-password": "^0",
    "@types/semver": "7.7.0",
    "@types/web-push": "^3.6.4",
    "@typescript-eslint/eslint-plugin": "8.33.1",
    "@typescript-eslint/parser": "8.33.1",
    "commitizen": "4.3.1",
    "crypto": "^1.0.1",
    "cy-mobile-commands": "^0.3.0",
    "cypress": "^14.4.1",
    "cz-conventional-changelog": "3.3.0",
    "daisyui": "^4.12.14",
    "eslint": "^9.28.0",
    "eslint-config-next": "^15.3.3",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-formatjs": "5.3.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-no-relative-import-paths": "1.6.1",
    "eslint-plugin-prettier": "5.4.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "extract-react-intl-messages": "4.1.1",
    "globals": "^16.2.0",
    "lint-staged": "16.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "4.1.0",
    "prettier-plugin-tailwindcss": "0.6.12",
    "semantic-release": "24.2.5",
    "stylelint": "^16.20.0",
    "typescript": "^5.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js}": [
      "prettier --write",
      "eslint"
    ],
    "**/*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version}"
        }
      ]
    ],
    "branches": [
      "main"
    ],
    "npmPublish": false,
    "publish": [
      {
        "buildArgs": {
          "COMMIT_TAG": "$GIT_SHA"
        },
        "imageNames": [
          "nickelsh1ts/streamarr",
          "ghcr.io/nickelsh1ts/streamarr"
        ],
        "platforms": [
          "linux/amd64",
          "linux/arm64",
          "linux/arm/v7"
        ]
      },
      "@semantic-release/github"
    ]
  },
  "packageManager": "yarn@4.4.0"
}
