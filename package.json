{
  "name": "streamarr",
  "version": "0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "lint": "eslint \"./src/**/*.{ts,tsx}\" --cache",
    "start": "next start",
    "css-lint": "stylelint src/styles/css/*.css src/styles/globals.css",
    "i18n:extract": "extract-messages -l=en -o src/i18n/locale -d en --flat true --overwriteDefault true \"./src/**/!(*.test).{ts,tsx}\"",
    "format": "prettier 'src/**/*.{css,js,ts,tsx}' --log-level warn --write --cache .",
    "format:check": "prettier 'src/**/*.{css,js,ts,tsx}' --check --cache .",
    "typecheck": "yarn typecheck:client",
    "typecheck:client": "tsc --noEmit",
    "cypress:open": "cypress open"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nickelsh1ts/streamarr.git"
  },
  "license": "MIT",
  "dependencies": {
    "@heroicons/react": "^2.1.1",
    "@svgr/webpack": "8.1.0",
    "@tailwindcss/aspect-ratio": "0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "0.5.7",
    "@tailwindcss/typography": "0.5.13",
    "autoprefixer": "10.4.18",
    "axios": "^1.7.2",
    "bowser": "^2.11.0",
    "date-fns": "^3.6.0",
    "intl": "1.2.5",
    "next": "^14.1.3",
    "nextjs-toploader": "^1.6.12",
    "postcss": "8.4.38",
    "react": "^18.3.1",
    "react-animate-height": "3.2.3",
    "react-aria": "3.33.0",
    "react-dom": "18.3.1",
    "react-intl": "6.6.6",
    "react-use-clipboard": "1.0.9",
    "tailwindcss": "3.4.1",
    "theme-change": "^2.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.0.3",
    "@commitlint/config-conventional": "19.2.2",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "12.0.0",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/node": "^20.11.25",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.0",
    "@types/react-transition-group": "4.4.10",
    "@types/semver": "7.5.8",
    "@typescript-eslint/eslint-plugin": "7.8.0",
    "@typescript-eslint/parser": "7.1.1",
    "commitizen": "4.3.0",
    "cy-mobile-commands": "^0.3.0",
    "cypress": "^13.6.6",
    "cz-conventional-changelog": "3.3.0",
    "daisyui": "^4.12.10",
    "eslint": "8.57.0",
    "eslint-config-next": "14.1.3",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-formatjs": "4.12.2",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-no-relative-import-paths": "1.5.3",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.34.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "extract-react-intl-messages": "4.1.1",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "prettier-plugin-organize-imports": "3.2.4",
    "prettier-plugin-tailwindcss": "0.5.12",
    "semantic-release": "23.0.2",
    "semantic-release-docker-buildx": "1.0.1",
    "stylelint": "^16.2.1",
    "typescript": "5.4.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js}": [
      "prettier --write",
      "eslint"
    ],
    "**/*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version}"
        }
      ],
      "semantic-release-docker-buildx",
      [
        "@semantic-release/github",
        {
          "addReleases": "bottom"
        }
      ]
    ],
    "branches": [
      "main"
    ],
    "npmPublish": false,
    "publish": [
      {
        "path": "semantic-release-docker-buildx",
        "buildArgs": {
          "COMMIT_TAG": "$GIT_SHA"
        },
        "imageNames": [
          "nickelsh1ts/streamarr",
          "ghcr.io/nickelsh1ts/streamarr"
        ],
        "platforms": [
          "linux/amd64",
          "linux/arm64",
          "linux/arm/v7"
        ]
      },
      "@semantic-release/github"
    ]
  },
  "packageManager": "yarn@4.1.1"
}
